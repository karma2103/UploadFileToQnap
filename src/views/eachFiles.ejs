<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Folder Contents</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .folder-row i {
      color: #007bff;
    }

    .file-row i {
      color: #6c757d;
    }
  </style>
</head>
<body>
  <%- include('./Layouts/Header'); %>

  <div class="container mt-5">
    <div class="row mb-4">
      <div class="col-md-6">
        <h1 style="font-family: Georgia, 'Times New Roman', Times, serif;">Folder: <%= folder.folderName %></h1>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>SI No</th>
            <th>File Name</th>
            <th>Upload Date</th>
            <th>Uploaded By</th>
            <th>File Size</th>
            <th>Department</th>
          </tr>
        </thead>
        <tbody>
          <% folder.files.forEach((file, index) => { %>
            <tr class="file-row">
              <td><%= index + 1 %></td>
              <td><i class="fas fa-file"></i> <%= file.originalname %></td>
              <td><%= new Intl.DateTimeFormat('en-US', { dateStyle: 'medium', timeStyle: 'short' }).format(new Date(file.date)) %></td>
              <td><%= file.uploadedBy ? file.uploadedBy.username : 'Unknown' %></td>
              <td><%= formatFileSize(file.size) %></td>
              <td><%= file.uploadedBy ? file.uploadedBy.department : 'Unknown' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <a href="/viewSave" class="btn btn-secondary">Back to Main</a>
  </div>
  <script>
    function formatFileSize(size) {
      if (size < 1024) return size + ' B';
      if (size < 1048576) return (size / 1024).toFixed(1) + ' KB';
      return (size / 1048576).toFixed(1) + ' MB';
    }
  </script>
</body>
</html>
