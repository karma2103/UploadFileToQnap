<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Count of Files & Folders</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
</head>
<%- include('./Layouts/Header'); %>
<body>
    <div class="container mt-5">
        <div class="row mb-4">
          <div class="col-md-6">
            <h1 style="font-family: Georgia, 'Times New Roman', Times, serif;">Count of Files & Folders</h1>
          </div>
          <div class="col-md-6 text-right">
            <div class="input-group">
              <input type="text" id="searchInput" class="form-control" placeholder="Search...">
              <div class="input-group-append">
                <button class="btn btn-primary" onclick="searchFiles()">Search</button>
              </div>
            </div>
          </div>
        </div>
   
        <canvas id="myChart"></canvas>
    </div>
    <script>
        const xValues = ["Finance", "Investment", "Claims", "Underwriting"];
        const yValues = [5, 9, 4, 3];
        const barColors = ["red", "green","blue","orange"];
        
        new Chart("myChart", {
          type: "bar",
          data: {
            labels: xValues,
            datasets: [{
              backgroundColor: barColors,
              data: yValues
            }]
          },
          options: {
            legend: {display: false},
            title: {
              display: true,
              text: "Uploaded Files and Folders"
            }
          }
        });
        </script>
</body>
<%- include('./Layouts/Footer'); %>
</html>
